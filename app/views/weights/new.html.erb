<%= render 'layouts/errors', obj: @pig %>

<ol class='breadcrumb'>
  <li><%= link_to 'Batches', batches_path %></li>
  <li><%= link_to @pig.batch.name, batch_path(@pig.batch) %></li>
  <li><%= link_to @pig.name, pig_path(@pig) %></li>
  <li class='active'>Add weight</li>
</ol>

<div class='well'>
  <%= form_for [@pig, @weight] do |f| %>
  <div class='row'>
  <div class='form-group col-lg-2'>
    <%= f.label :date %>
    <br>
    <div class='input-group date' id='datetimepicker'>
      <span class='input-group-addon'>
        <span class='glyphicon glyphicon-calendar'></span>
        </span>
    <%= f.text_field :date, class: 'form-control'%>
    </div>
  </div>
  </div>
  <div class='form-group'>
    <%= f.label :weight %>
    <br>
    <%= f.number_field :weight, step: 0.5 %>
  </div>
  <%= f.submit(@weight.new_record? ? "Add weight" : "Update weight", class:'btn btn-success') %>
  <% end %>
</div>

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sorganics</title>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="wrapper">

      <!-- Sidebar -->
      <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <li class="sidebar-brand">
            <%= link_to "Siargao Organics", root_path %>
          </li>
          <li>
            <a href="#batch-menu" data-toggle="collapse">Batches <span class='caret'></span></a>
          </li>
          <div class="collapse" id='batch-menu'>
            <li><%= link_to batches_path do %>
              <i class='glyphicon glyphicon-eye-open'></i> View Batches
              <% end %> </li>
            <li><%= link_to new_batch_path do %>
              <i class='glyphicon glyphicon-plus'></i> Add a batch
              <% end %></li>
            <li><%= link_to new_pig_path do %>
              <i class='glyphicon glyphicon-plus'></i> Add a pig
              <% end %></li>
          </div>
          <li>
            <a href="#feed-menu" data-toggle="collapse">Feed <span class='caret'></span></a>
          </li>
          <div class="collapse" id='feed-menu'>
            <li><%= link_to feed_types_path do %>
              <i class='glyphicon glyphicon-eye-open'></i> View Feeds
              <% end %></li>
            <li><%= link_to new_feed_type_path do %>
              <i class='glyphicon glyphicon-plus'></i> Add a new type of Feed
              <% end %></li>
          </div>
          <li>
            <a href="#inventory-menu" data-toggle="collapse">Inventory <span class='caret'></span></a>
          </li>
          <div class="collapse" id='inventory-menu'>
            <li><%= link_to current_inventory_path do %>
              <i class='glyphicon glyphicon-eye-open'></i> View Running inventory
              <% end %></li>
            <li><%= link_to inventories_path do %>
              <i class='glyphicon glyphicon-eye-open'></i> View physical inventories
              <% end %></li>
            <li><%= link_to new_inventory_path do %>
              <i class='glyphicon glyphicon-plus'></i> Record a physical inventory
              <% end %></li>
            </div>
          <hr>
          <%= yield :sidebar %>
        </ul>
      </div>
      <!-- /#sidebar-wrapper -->
      <div id="page-content-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
              <div class='container-fluid'>
                <div class='row' id='top-col'>
                  <%= link_to "#menu-toggle", id: "menu-toggle" do %>
                  <i class='glyphicon glyphicon-th-list'></i> Menu
                  <% end %>
                  <%= yield :top_col %>
                </div>
              </div>
              <br>
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
      });
    </script>
  </body>
</html>
